{
    "name": "arcgis-assistant",
    "displayName": "ArcGIS Assistant",
    "description": "A tool for modifying ArcGIS Enterprise and Online items",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.29.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:arcgisAssistant",
        "onCommand:arcgisAssistant.refresh"
    ],
    "main": "./out/extension",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "arcgisAssistant",
                    "name": "ArcGIS"
                }
            ]
        },
        "commands": [
            {
                "command": "arcgisAssistant.refresh",
                "title": "Refresh"
            },
            {
                "command": "arcgisAssistant.addPortal",
                "title": "Add Portal"
            }
        ],
        "menus": {
            "view/title": [{
                "command": "arcgisAssistant.refresh",
                "when": "view == arcgisAssistant"
            }, {
                "command": "arcgisAssistant.addPortal",
                "when": "view == arcgisAssistant"
            }],
            "view/item/context": [{
                "command": "arcgisAssistant.refresh"
            }]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/axios": "^0.14.0",
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "tslint": "^5.8.0",
        "typescript": "^3.1.4",
        "vscode": "^1.1.21"
    },
    "dependencies": {
        "axios": "^0.18.0"
    }
}
